// ---- Extends ----

// Checkbox
checkbox
  appearance(checkbox)

// Clear floats
clearfix
  &:before, &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1

// Transition Timing
transition()
  transition: all 0.2s ease-in-out

// Hover
button-hover()
  background: concrete
  color: clouds

// Active
button-active()
  background: asbestos

// Delete
button-delete()
  background: pomegranate
  border: 1px solid pomegranate
  color: clouds
  &:hover
    background: alizarin
    color: #fff
    opacity: 0.7

// search button
search-button()
  background: belizehole
  border-color: #0044cc #0044cc #002a80
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
  box-shadow: 0 1px 0 #fff
  color: #fff
  cursor: pointer
  padding: 5px
  text-align: center
  width: 50px
  &:hover
    background: peterriver

// Buttons
generic-button()
  background: clouds
  border: 1px solid clouds
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.2), 0 1px 2px rgba(0,0,0,0.05)
  color: concrete
  cursor: pointer
  display: inline-block
  font-family: Helvetica, Arial, sans-serif
  font-size 1.2rem
  line-height: 20px
  margin: 0 5px 0 0
  min-width: 60px
  padding: 4px 12px
  transition: all 0.2s ease-out
  @extend $transition
  &:hover
    @extend $button-hover
  &:active
    @extend $button-active



